@model AgroFuturo.Models.ConsumoInsumo

@{
	ViewData["Title"] = "Create";
}

<h1 class="text-dark text-center">Adicionar<span class="fw-bold"> Consumo</span></h1>
<hr />
<div class="row">
	<div class="col-12">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="QuantidadeConsumida" class="control-label"></label>
				<input asp-for="QuantidadeConsumida" class="form-control" />
				<span asp-validation-for="QuantidadeConsumida" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="SafraInicio" class="control-label"></label>
				<input asp-for="SafraInicio" class="form-control" />
				<span asp-validation-for="SafraInicio" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="SafraFim" class="control-label"></label>
				<input asp-for="SafraFim" class="form-control" />
				<span asp-validation-for="SafraFim" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CustoTotal" class="control-label"></label>
				<input asp-for="CustoTotal" class="form-control" />
				<span asp-validation-for="CustoTotal" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="EquipamentoId" class="control-label"></label>
				<select asp-for="EquipamentoId" class="form-control" asp-items="ViewBag.EquipamentoId"></select>
			</div>
			<div class="form-group">
				<label asp-for="CategoriaInsumoId" class="control-label"></label>
				<select asp-for="CategoriaInsumoId" class="form-control" asp-items="ViewBag.CategoriaInsumoId"></select>
			</div>
			<div class="form-group">
				<label asp-for="FazendaId" class="control-label"></label>
				<select asp-for="FazendaId" class="form-control" asp-items="ViewBag.FazendaId"></select>
			</div>
			<div class="row gap-3 mt-3 mb-3">
				<div class="col-12 d-flex justify-content-between">
					<div>
						<a asp-action="Index" class="btn btn-danger">Cancelar</a>
					</div>

					<div class="form-group">
						<input type="submit" value="Criar" class="btn btn-primary" />
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
